global_settings{ assumed_gamma 1 }
#default{finish{ambient 0}}
camera{
 orthographic
 right x*1 up y*1
 location -z
 look_at 0 
}
#declare obj=
 cone{0,0,z,1
  pigment{
   cylindrical
   poly_wave 8
   rotate x*90
   color_map{
    [0 rgb 0]
    [.65 rgb y*.5]
    [1 rgb 2]
   }
  }
  finish{ambient 1}  
  scale<96,24,96>
 }
#declare V=0;
#while(V<=8)
 #declare obj=
 union{  
  object{obj translate y*1.5 rotate z*0  scale .5}
  object{obj translate y*1.5 rotate z*108 scale .5}
  object{obj translate y*1.5 rotate z*-108 scale .5}
 }
 #local V=V+1;
#end
object{obj scale .325 translate y*-.1}